@model IEnumerable<CantCSharp.Models.QuestionModel>


@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome To Can't C#</h1>
    <p>Questions are everywhere, answers are on Can't C# !</p>
</div>
<div>
    <form method="post">
        <label for="">
            Username
            <input type="text" id="name" name="username" required><br>
        </label>
        <label for="message">
            The message:
            <input id="textbox" type="text" name="message" required><br>

        </label>
        <button>Submit</button>
    </form>

    <table>
        <tr>
            <th>Id </th>
            <th>Question Title </th>
            <th>Question Message </th>
        </tr>
        <tbody>
            @foreach (var question in Model)
            {
                <tr>
                    <td><a href="" @question.QuestionID> @question.QuestionID</a></td>
                    <td>@question.QuestionTitle</td>
                    <td>@question.QuestionMessage</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@model Dictionary<QuestionModel, List<Answer>>
@{
    ViewData["Title"] = "Search Results";
}

<div class="text-center">
    <h1 class="display-4">Search Finished</h1>
    <p>Here's what we found!</p>
</div>

<div class="btn-group btn-container w-100 justify-content-between">
    <form action="/Home/AllQuestions">
        <button class="btn-primary m-2">Back to Question List</button>
    </form>
</div>

@if (Model.Count() == 0)
{
    <p class="h6 text-center">No results found! Try again with different keywords!</p>
}
else
{
    <div class="list-group">
        <ul class="w-100 p-2">
            <li class="list-group-item flex-column align-items-start border-0 font-weight-bold text-center">
                <table>
                    <tr>
                        <td class="text-left" width="2%">ID</td>
                        <td class="text-left" width="20%"><a href="@Url.Action("SortByTitle", "Home")">Title</a></td>
                        <td width="10%"><a href="@Url.Action("SortByDate", "Home")">Date</a></td>
                        <td width="5%"><a href="@Url.Action("SortByVotes", "Home")">Upvotes</a></td>
                        <td width="5%"><a href="@Url.Action("SortByViews", "Home")">Views</a></td>
                        <td width="5%"><a href="@Url.Action("SortByAnswersCount", "Home")">Answers</a></td>
                        <td align="right" width="4%"></td>
                    </tr>
                </table>
            </li>
            @foreach (var result in Model)
            {
                <li class="list-group-item list-group-item-action flex-column align-items-start text-center">
                    <a href="@Url.Action("QuestionDetails", "Home", new { id = result.Key.QuestionID })" class="list-group-item-action flex-column align-items-start">
                        <table>
                            <tr>
                                <td class="text-left" width="2%">#@result.Key.QuestionID</td>
                                <td class="text-left" width="20%">@result.Key.QuestionTitle</td>
                                <td width="10%">@result.Key.PostTime</td>
                                <td width="5%">@result.Key.VoteNumber</td>
                                <td width="5%">@result.Key.ViewNumber</td>
                                <td width="5%">@result.Key.AnswerList.Count</td>
                                @if (result.Key.Answered)
                                {
                                    <td align="right" width="3%" class="badge-info rounded">Solution</td>
                                }
                                else
                                {
                                    <td align="right" width="3%" class="badge-danger rounded">Problem</td>
                                }
                            </tr>
                        </table>
                    </a>
                </li>

                @if (result.Value.Count != 0)
                {
                    <li class="list-group-item flex-column text-center border-left-0 border-right-0 bg-light w-75 mr-0 ml-auto">
                                Answers containing the keyword(s)
                    </li>
                }

                foreach (Answer answer in result.Value)
                {
                    <li class="list-group-item flex-column text-xl-center border-left-0 border-right-0 bg-light w-75 mr-0 ml-auto">
                        <table>
                            <tr>
                                <td width="15%">@answer.User</td>
                                <td width="70%">@answer.AnswerMessage</td>
                                <td width="15%">@answer.PostTime</td>
                            </tr>
                        </table>
                    </li>
                }
            }
        </ul>
    </div>
}
